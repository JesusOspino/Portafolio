---
import { Image } from "astro:assets";

interface Props {
    title: string;
    image: string;
    width: number;
}

const { title, image, width = 20 } = Astro.props;
---

<div
    class="flex justify-center items-center gap-1 p-2 py-1 rounded-md border border-gray-200 border-solid"
>
    <Image src={image} alt="icon" width={width} height={30} />
    <span class="text-[10px] text-primary font-bold">{title}</span>
</div>
